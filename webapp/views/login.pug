extends ./layout
block styles
  link(href="../vendor/metisMenu/metisMenu.min.css", rel="stylesheet")

  link(href="../dist/css/sb-admin-2.css", rel="stylesheet")

  link(href="../vendor/font-awesome/css/font-awesome.min.css", rel="stylesheet", type="text/css")
block body
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Iniciar Sesión
          .panel-body
            if locals.error
              h4(style="color:red") #{locals.error}
            form(role="form", method="POST", action="/login")
              fieldset
                .form-group
                  input.form-control(placeholder="Carnet", name="carne", type="text", autofocus)
                .form-group
                  input.form-control(placeholder="Contraseña", name="password", type="password")
                .checkbox
                  label
                    input(name="remember", type="checkbox", value="Remember Me")
                    | Recordarme
                input.btn.btn-lg.btn-success.btn-block(type="submit", value="Iniciar Sesión")
block scripts
  script(src="../vendor/metisMenu/metisMenu.min.js")

  script(src="../dist/js/sb-admin-2.js")
